<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:properties="clr-namespace:AMWin_RichPresence.Properties"
                    x:Class="AMWin_RichPresence.Taskbar">

    <tb:TaskbarIcon x:Key="TaskbarIcon" IconSource="/Resources/AMWinRP.ico" TrayMouseDoubleClick="TaskbarIcon_DoubleClick" ToolTipText="AMWin-RP">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu UseLayoutRounding="True">
                <ui:MenuItem Header="AMWin-RP" FontWeight="SemiBold" IsEnabled="False" StaysOpenOnClick="True">
                    <ui:MenuItem.Icon>
                        <ui:ImageIcon Width="20" Height="20" Margin="0 0 3 0" Source="/Resources/AMWinRP.ico" />
                    </ui:MenuItem.Icon>
                </ui:MenuItem>
                <Separator />
                <ui:MenuItem Header="{x:Static properties:Localisation.Taskbar_Settings_Title}" Click="MenuItemSettings_Click">
                    <ui:MenuItem.Icon>
                        <ui:FontIcon Margin="0 2 3 0" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE713;" />
                    </ui:MenuItem.Icon>
                </ui:MenuItem>
                <ui:MenuItem Header="{x:Static properties:Localisation.Taskbar_Exit_Title}" Click="MenuItemExit_Click">
                    <ui:MenuItem.Icon>
                        <ui:SymbolIcon Margin="0 2 3 0" Symbol="ArrowExit20"/>
                    </ui:MenuItem.Icon>
                </ui:MenuItem>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>